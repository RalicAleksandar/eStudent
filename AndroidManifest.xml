<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.ac.bg.etf.estudent"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission 
	    android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >

       <activity
            android:name="rs.ac.bg.etf.estudent.activity.DrawerActivityMain"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="rs.ac.bg.etf.estudent.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/myTheme"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rs.ac.bg.etf.estudent.activity.LogoutActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
